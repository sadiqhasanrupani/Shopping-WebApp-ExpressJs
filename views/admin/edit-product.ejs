<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
      <% if(edit === "true") { %>
         <form class="product-form" action="/admin/edit-product" method="POST"> 
      <% } else { %> 
         <form class="product-form" action="/admin/add-product" method="POST">
      <% } %>    
            <div class="form-control">
               <label for="title">Title</label>
               <input type="text" name="title" id="title" value="<% if(edit === "true") { %><%= product.title %><% } else {} %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if(edit === "true") { %><%= product.imageUrl %><% } else {} %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if(edit === "true") { %><%= product.price %><% } else {} %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" styles="width: 100%;"><% if(edit === "true") { %><%= product.description %><% } else {} %></textarea>
            </div>
            <% if(edit === "true") { %>
               <button class="btn" type="submit">Edit Product</button>
            <% } else { %>    
               <button class="btn" type="submit">Add Product</button>
            <% } %> 
            </form>
    </main>
<%- include('../includes/end.ejs') %>